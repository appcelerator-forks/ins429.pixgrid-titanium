<Alloy>
  <View id="login" class="loginContainer">
    <View id="loginContents">
      <ImageView id="logo"/>
      <View id="emailWrapper">
        <TextField id="email"/>
      </View>
      <View id="passwordWrapper">
        <TextField id="password"/>
      </View>
      <View id="loginB">
        <Button id="loginBtn">Login</Button>
      </View>
      <View id="border">
        <View id="borderT"></View>
        <View id="borderB"></View>
      </View>
      <View id="signupB">
        <Button id="signupBtn">Sign up</Button>
      </View>
    </View>

    <ScrollView id="signupContents">
      <ImageView class="logo"/>
      <View id="emailWrapperA">
        <TextField id="emailA"/>
      </View>
      <View id="passwordWrapperA">
        <TextField id="passwordA"/>
      </View>
      <View id="passwordConfirmWrapper">
        <TextField id="passwordConfirm"/>
      </View>
      <View id="firstNameWrapper">
        <TextField id="firstName"/>
      </View>
      <View id="lastNameWrapper">
        <TextField id="lastName"/>
      </View>
      <View id="signupBA">
        <Button id="signupBtnA">Sign up</Button>
      </View>
      <View id="border">
        <View id="borderT"></View>
        <View id="borderB"></View>
      </View>
      <View id="loginBA">
        <Button id="loginBtnA">Login</Button>
      </View>
    </ScrollView>
  </View>
</Alloy>
